@model TAIProject.Models.ProductIndexModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Picture)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Product.Picture != null)
                {
                    <img id="profilePicture" style="width:200px;height:200px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(Model.Product.Picture))">
                }
                else
                {
                    <img id="profilePicture" style="width:50px;height:50px; object-fit:cover" src="">
                }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Product.AmountInStore)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product.AmountInStore)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Product.UnitPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product.UnitPrice)
        </dd>
        <dt class = "col-sm-2">
            Category
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-controller="cart" asp-action="buy" asp-route-id="@Model?.Product.Id">Buy Now</a>
    <a asp-action="Edit" asp-route-id="@Model?.Product.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
